@model AspNetDemo.Models.OrderService

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <!-- ============================================================== -->
            <!-- pageheader  -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <div>
                            <h4>Order</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Company.Email) : @Html.DisplayFor(model => model.Company.Email)
                                </dt>
                                <dt>
                                    @Html.DisplayNameFor(model => model.CreatedAt) : @Html.DisplayFor(model => model.CreatedAt)
                                </dt>
                                <dt>
                                    @Html.DisplayNameFor(model => model.PaymentDate) : @Html.DisplayFor(model => model.PaymentDate)
                                </dt>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Company.Name) @Html.DisplayNameFor(model => model.Company.Name)
                                </dt>
                                @{
                                    string statusDisplay = "";
                                    switch (Model.Status)
                                    {
                                        case -1:
                                            statusDisplay = "Canceled";
                                            break;
                                        case 0:
                                            statusDisplay = "Processing";
                                            break;
                                        case 1:
                                            statusDisplay = "Accepted";
                                            break;
                                        case 2:
                                            statusDisplay = "Done";
                                            break;
                                        default:
                                            statusDisplay = "Unknown";
                                            break;
                                    }
                                }
                                <dt>
                                    @Html.DisplayNameFor(model => model.Status) : @statusDisplay
                                </dt>
                                <dt>
                                    @Html.DisplayNameFor(model => model.TotalPrice) : @Html.DisplayFor(model => model.TotalPrice)
                                </dt>
                            </dl>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="card m-b-30">
                                    <div class="card-body">
                                        <div class="table-rep-plugin">
                                            <div class="table-responsive b-0" data-pattern="priority-columns">
                                                <table id="tech-companies-1" class="table  table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>Service</th>
                                                            <th>Unit Price</th>
                                                            <th>Number Employee</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.OrderDetails)
                                                        {
                                                            <tr>
                                                                <th>@item.id</th>
                                                                <td>@item.Service.Name</td>
                                                                <td>@item.Service.Price</td>
                                                                <td>@item.NumberOfEmployee</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
