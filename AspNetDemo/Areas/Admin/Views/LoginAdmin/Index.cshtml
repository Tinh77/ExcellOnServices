@model AspNetDemo.Models.Admin

@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Annex - Responsive Bootstrap 4 Admin Dashboard</title>
    <meta content="Admin Dashboard" name="description" />
    <meta content="Mannatthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link rel="shortcut icon" href="../../../Customer/Views/../../../Content/DashboardAssets/assets/images/favicon.ico">

    <link href="../../../Customer/Views/../../../Content/DashboardAssets/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../../../Customer/Views/../../../Content/DashboardAssets/assets/css/icons.css" rel="stylesheet" type="text/css">
    <link href="../../../Customer/Views/../../../Content/DashboardAssets/assets/css/style.css" rel="stylesheet" type="text/css">

</head>


<body>


    <!-- Begin page -->
    <div class="accountbg"></div>
    <div class="wrapper-page">

        <div class="card">
            <div class="card-body">

                <h3 class="text-center mt-0 m-b-15">
                    <a href="../../../Customer/Views/Login/index.html" class="logo logo-admin"><img src="../../../Customer/Views/../../../Content/DashboardAssets/assets/images/logo.png" height="24" alt="logo"></a>
                </h3>

                <div class="p-3">
                    <form class="form-horizontal m-t-20" action="../../../Customer/Views/Login/index.html">

                        <div class="form-group row">
                            <div class="col-12">
                                <input id="uniqueEmail" class="form-control" type="text" required="" placeholder="Email">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <input id="uniquePassword" class="form-control" type="password" required="" placeholder="Password">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember me</label>
                                </div>
                            </div>
                        </div>

                        <fieldset>
                            <center>
                                <input style="text-align: center; background: #63C76A; color: white" class="btn-default btn" onclick="location.href = '@Url.Action("Login", "LoginAdmin", new {area = "Admin"})?email=' + $('#uniqueEmail').val() + '&password=' + $('#uniquePassword').val()" value="Submit" />
                            </center>
                        </fieldset>


                        <div class="form-group m-t-10 mb-0 row">
                            <div class="col-sm-5 m-t-20">
                                <a href="@Url.Action("Index","RegisterAdmin", new {area = "Admin"})" class="text-muted"><i class="mdi mdi-account-circle"></i> <small>Create an account ?</small></a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>



    <!-- jQuery  -->
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/jquery.min.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/popper.min.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/bootstrap.min.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/modernizr.min.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/waves.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/jquery.slimscroll.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/jquery.nicescroll.js"></script>
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="../../../Customer/Views/../../../Content/DashboardAssets/assets/js/app.js"></script>

</body>
</html>


