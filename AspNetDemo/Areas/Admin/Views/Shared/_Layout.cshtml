<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/Content/DashboardAdmin/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/charts/chartist-bundle/chartist.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/charts/morris-bundle/morris.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/charts/c3charts/c3.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/DashboardAdmin/assets/libs/css/mystyle.css">
    <title>Concept - Bootstrap 4 Admin Dashboard Template</title>
</head>
<body>
    <div class="">
        <!-- ============================================================== -->
        <!-- main wrapper -->
        <!-- ============================================================== -->
        <div class="dashboard-main-wrapper">
            <!-- ============================================================== -->
            <!-- navbar -->
            <!-- ============================================================== -->
            @*@RenderSection("navbarAdmin", required: false)*@
            <div class="dashboard-header">
                <nav class="navbar navbar-expand-lg bg-white fixed-top">
                    <a class="navbar-brand page-scroll sticky-logo" href="@Url.Action("Index","OrderManagment", new {Area = "Admin"})"><h1><span>E</span>oS</h1></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto navbar-right-top">
                            <li class="nav-item search-box" style="padding-top: 15px;padding-right: 10px">
                                @using (Html.BeginForm("Index", "OrderManagment", FormMethod.Post))
                                {
                                    @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "Search ..." })
                                }
                            </li>


                            <li class="nav-item dropdown nav-user">
                                <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Content/DashboardAdmin/assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle"></a>
                                <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                                    <div class="nav-user-info">
                                        <h5 class="mb-0 text-white nav-user-name">John Abraham </h5>
                                        <span class="status"></span><span class="ml-2">Available</span>
                                    </div>
                                    <a class="dropdown-item" href="#"><i class="fas fa-user mr-2"></i>Account</a>
                                    <a class="dropdown-item" href="#"><i class="fas fa-cog mr-2"></i>Setting</a>
                                    <a class="dropdown-item" href="#"><i class="fas fa-power-off mr-2"></i>Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <!-- ============================================================== -->
            <!-- end navbar -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- left sidebar -->
            <!-- ============================================================== -->
            @*@RenderSection("leftsidebar", required: false)*@
            <div class="nav-left-sidebar sidebar-dark">
                <div class="menu-list">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="d-xl-none d-lg-none" href="#">Dashboard</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav flex-column">
                                <li class="nav-divider">
                                    Menu
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-2" aria-controls="submenu-2"><i class="fa fa-fw fa-rocket"></i>Danh sách nhân viên</a>
                                    <div id="submenu-2" class="collapse submenu" style="">
                                        <ul class="nav flex-column">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index","Employees", new {Area = "Admin"})">Nhân viên</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index","Companies", new {Area = "Admin"})" aria-expanded="false" data-target="#submenu-3" aria-controls="submenu-3">Danh sách khách hàng</a>
                                    <div id="submenu-3" class="collapse submenu" style="">
                                        <ul class="nav flex-column"></ul>
                                    </div>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Services", new {Area = "Admin"})" aria-expanded="false" data-target="#submenu-4" aria-controls="submenu-4">Danh sách dịch vụ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-5" aria-controls="submenu-5"><i class="fas fa-fw fa-table"></i>Danh sách đơn hàng</a>
                                    <div id="submenu-5" class="collapse submenu" style="">
                                        <ul class="nav flex-column">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index","OrderManagment", new {Area = "Admin"})">Danh sách đơn hàng hiện tại</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Active_Order","OrderManagment", new {Area = "Admin"})">Đơn hàng xác nhận</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end left sidebar -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- wrapper  -->
            <!-- ============================================================== -->
            @RenderBody()
        </div>


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Content/DashboardAdmin/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <!-- bootstap bundle js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- slimscroll js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <!-- main js -->
    <script src="~/Content/DashboardAdmin/assets/libs/js/main-js.js"></script>
    <!-- chart chartist js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/chartist-bundle/chartist.min.js"></script>
    <!-- sparkline js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
    <!-- morris js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/morris-bundle/raphael.min.js"></script>
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/morris-bundle/morris.js"></script>
    <!-- chart c3 js -->
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/c3charts/c3.min.js"></script>
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/c3charts/d3-5.4.0.min.js"></script>
    <script src="~/Content/DashboardAdmin/assets/vendor/charts/c3charts/C3chartjs.js"></script>
    <script src="~/Content/DashboardAdmin/assets/libs/js/dashboard-ecommerce.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>