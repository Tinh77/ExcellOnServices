@model PagedList.IPagedList<OrderService>
@using AspNetDemo.Models
@using PagedList
@using PagedList.Mvc
@{

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="header-bg page-area">
    <div class="home-overly"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="slider-content text-center">
                    <div class="header-bottom">
                        <div class="layer2 wow zoomIn" data-wow-duration="1s" data-wow-delay=".4s">
                            <h1 class="title2">Excell On </h1>
                        </div>
                        <div class="layer3 wow zoomInUp" data-wow-duration="2s" data-wow-delay="1s">
                            <h2 class="title3">Nâng tầm giá trị</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container ">
    <div class="area-padding">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img mb-5">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        Kshiti Ghelani
                    </h5>
                    <h6>
                        Web Developer and Designer
                    </h6>
                    <p class="proile-rating">RANKINGS : <span>8/10</span></p>
                    <div class="tab-menu">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" style="border-bottom: 1px solid #dee2e6;" role="tablist">
                            <li class="active">
                                <a href="#p-view-1" role="tab" data-toggle="tab" aria-expanded="true">Thông tin tài khoản</a>
                            </li>
                            <li class="">
                                <a href="#p-view-2" role="tab" data-toggle="tab" aria-expanded="false">Lịch Sử Giao Dịch</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary" name="btnAddMore" value="Edit Profile" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="profile-work">
                    <p>WORK LINK</p>
                    <a href="">Website Link</a><br />
                    <a href="">Bootsnipp Profile</a><br />
                    <a href="">Bootply Profile</a>
                    <p>SKILLS</p>
                    <a href="">Web Designer</a><br />
                    <a href="">Web Developer</a><br />
                    <a href="">WordPress</a><br />
                    <a href="">WooCommerce</a><br />
                    <a href="">PHP, .Net</a><br />
                </div>
            </div>
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="tab-content">
                    <div class="tab-pane active" id="p-view-1">
                        <div class="tab-inner">
                            <div class="event-content head-team">
                                <h4>Thông tin tài khoản</h4>
                                <p>
                                    @{
                                        Company comp = new Company();
                                        comp = (Company)Session["CompanyLogin"];
                                        if (comp != null)
                                        {
                                            <tr>
                                                <td>
                                                    @comp.Name
                                                </td>
                                            </tr>
                                        }
                                    }
                                </p>
                                <p>
                                    voluptas, praesentium maxime cum fugiat,magnam ducimus adipisci voluptas, praesentium architecto
                                    ducimus, doloribus fuga itaque omnis placeat.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="p-view-2">
                        <div class="tab-inner">
                            <div class="event-content head-team">
                                <h4>Lịch sử giao dịch</h4>
                                <table id="tech-companies-1" class="table  table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Email</th>
                                            <th>Name</th>
                                            <th>CreatedAt</th>
                                            <th>PaymentDate</th>
                                            <th>TotalPrice</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th>@Html.DisplayFor(modelItem => item.Id)</th>
                                                <td>@Html.DisplayFor(modelItem => item.Company.Email)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Company.Name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                                                @{
                                                    string statusDisplay = "";
                                                    switch (item.Status)
                                                    {
                                                        case -1:
                                                            statusDisplay = "Canceled";
                                                            break;
                                                        case 0:
                                                            statusDisplay = "Processing";
                                                            break;
                                                        case 1:
                                                            statusDisplay = "Accepted";
                                                            break;
                                                        case 2:
                                                            statusDisplay = "Done";
                                                            break;
                                                        default:
                                                            statusDisplay = "Unknown";
                                                            break;
                                                    }
                                                }
                                                <td>@statusDisplay</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        @{
                                                            switch (item.Status)
                                                            {
                                                                case -1:
                                                                    @Html.ActionLink("Re Open", "ReOpen", new { id = item.Id })
                                                                    break;
                                                                case 0:
                                                                    @Html.ActionLink("Accpeted", "ChangeStatus", new { id = item.Id })
                                                                    break;
                                                                case 1:
                                                                    @Html.ActionLink("Done", "ChangeStatus", new { id = item.Id })
                                                                    break;
                                                                default:
                                                                    break;
                                                            }
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
