﻿@using System.Web.UI.WebControls
@using AspNetDemo.Models
﻿@using AspNetDemo.Models
@model AspNetDemo.Models.Service

@*<div id="preloader"></div>*@
<!-- header end -->
<!-- Start Bottom Header -->
<div class="header-bg page-area">
    <div class="home-overly"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="slider-content text-center">
                    <div class="header-bottom">
                        <div class="layer2 wow zoomIn" data-wow-duration="1s" data-wow-delay=".4s">
                            <h1 class="title2">Chi tiết Blog </h1>
                        </div>
                        <div class="layer3 wow zoomInUp" data-wow-duration="2s" data-wow-delay="1s">
                            <h2 class="title3">Trang Blog chuyên nghiệp</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Header -->
<div class="blog-page area-padding">
    <div class="container">
        <div class="row">
            <!-- Start single blog -->
            <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <!-- single-blog start -->
                        <article class="blog-post-wrapper">
                            <div class="post-thumbnail">
                                <img src="../../Content/HomeAssets/img/blog/6.jpg" alt="" />
                            </div>
                            <div class="post-information">
                                <h2>@Html.DisplayFor(model => model.Name)</h2>
                                <p>@Html.DisplayFor(model => model.Descrition)</p>
                                <ul>
                                    <li>>Chào bạn</li>
                                    <li>Thanh toán nhanh</li>
                                    <li>Tiện lợi</li>
                                </ul>
                            </div>
                        </article>
                        <div class="clear"></div>
                        <div class="single-post-comments">
                            <div class="comment-respond">
                                <h3 class="comment-reply-title">Để lại câu trả lời </h3>
                                <form action="#" name="serviceForm">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <p>Số lượng nhân viên</p>
                                            <input style="width: 100%; margin-bottom: 10px" id="numberEmployee" name="NumberOfEmployee" value="5" type="number" />
                                            <div id="number-error" class="text-danger alert alert-danger error">Bạn phải thuê ít nhất 1 nhân viên</div>
                                            @{
                                                Company comp = new Company();
                                                comp = (Company)Session["CompanyLogin"];
                                                if (comp != null)
                                                {
                                                    <a class="btn btn-default" id="payment">Thêm vào giỏ hàng</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-default" href="@Url.Action("Index", "Login", new {area = "Customer"})">Login and Order</a>

                                                }
                                            }
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <p>Thời gian thuê</p>
                                            <input type="text" name="daterange" id="daterange" />
                                            <div id="date-error" class="text-danger alert alert-danger error">Bạn hãy chọn đúng ngày thuê hiện tại</div>

                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <!-- single-blog end -->
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="page-head-blog">
                    <div class="single-blog-page">
                        <!-- recent start -->
                        <div class="left-blog">
                            <h4>Dịch vụ gần đầy</h4>
                            <div class="recent-post">
                                <div class="recent-single-post">
                                    <div class="post-img">
                                        <a href="#">
                                            <img src="../../Content/HomeAssets/img/blog/2.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="pst-content">
                                        <p><a href="#"> In Bound </a></p>
                                    </div>
                                </div>
                                <!-- End single post -->
                                <!-- start single post -->
                                <div class="recent-single-post">
                                    <div class="post-img">
                                        <a href="#">
                                            <img src="../../Content/HomeAssets/img/blog/3.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="pst-content">
                                        <p><a href="#"> Out bound</a></p>
                                    </div>
                                </div>
                                <!-- End single post -->
                                <!-- start single post -->
                                <div class="recent-single-post">
                                    <div class="post-img">
                                        <a href="#">
                                            <img src="../../Content/HomeAssets/img/blog/4.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="pst-content">
                                        <p><a href="#">Tele Marketing</a></p>
                                    </div>
                                </div>
                                <!-- End single post -->
                            </div>
                        </div>
                        <!-- recent end -->
                    </div>
                </div>
            </div>
        </div>
        <!-- End left sidebar -->
    </div>
</div>
<!-- End Blog Area -->
<div class="clearfix"></div>
<!-- Start Footer bottom Area -->

<a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

<script>
       var btn_payment = document.getElementById("payment");
        btn_payment.onclick = function() {
            var employee = document.getElementById("numberEmployee");
            var daterange = document.getElementById("daterange");
            var dates = daterange.value.split(" - ");
            var startDate = new Date(dates[0]).getTime();
            var endDate = new Date(dates[1]).getTime();
            var currentDate = new Date().getTime();
            if (employee.value < 0) {
                employee.style.border = "1px solid red";
                $("#number-error").show();
                return;
            } else {
                daterange.style.border = "1px solid #E5E5E5";
                $("#number-error").hide();
            }
            if (currentDate > startDate) {
                daterange.style.border = "1px solid red";
                $("#date-error").show();
                return;
            }
            else {
                daterange.style.border = "1px solid #E5E5E5";
                $("#date-error").hide();
            }
            if (startDate === endDate) {
                var finalEndDate = new Date(endDate + 24 * 60 * 60 * 1000);
                daterange.value = dates[0] + ' - ' + (finalEndDate.getMonth() + 1) + '/' + finalEndDate.getDate() + '/' + finalEndDate.getFullYear();
                window.location.href = '/Customer/Cart/AddtoCart?id=' + @Model.Id + '&numberOfEmployee=' + $("#NumberOfEmployee").val() + '&date=' + daterange.value;
            }

            window.location.href = '/Customer/Cart/AddtoCart?id=' + @Model.Id + '&numberOfEmployee=' + employee.value + '&date=' + daterange.value;

        }
</script>
